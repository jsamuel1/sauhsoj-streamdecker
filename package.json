{
  "name": "sauhsoj-streamdecker",
  "version": "0.1.6",
  "description": "Stream Deck plugin for kiro-cli integration and SA productivity",
  "main": "shared/plugin.ts",
  "type": "module",
  "scripts": {
    "build": "node scripts/sync-version.mjs && rollup -c",
    "watch": "rollup -c -w --watch.onEnd=\"streamdeck restart wtf.sauhsoj.streamdecker\"",
    "lint": "eslint kiro-deck/shared --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write kiro-deck/shared/**/*.ts",
    "check": "npm run lint && npm run build",
    "test": "npm run test:scripts",
    "test:scripts": "for f in wtf.sauhsoj.streamdecker.sdPlugin/scripts/*.applescript; do echo \"Testing $f\"; osacompile -o /dev/null \"$f\" || exit 1; done && echo 'All scripts OK'",
    "prepare": "husky"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "wtf.sauhsoj.streamdecker.sdPlugin/scripts/*.applescript": [
      "bash -c 'for f in \"$@\"; do osacompile -o /dev/null \"$f\" || exit 1; done' _"
    ]
  },
  "keywords": [
    "streamdeck",
    "kiro",
    "productivity"
  ],
  "author": "sauhsoj",
  "license": "MIT",
  "devDependencies": {
    "@elgato/streamdeck": "^2.0.0",
    "@eslint/js": "^9.39.2",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/node": "^25.0.10",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "rollup": "^4.9.6",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.54.0"
  },
  "dependencies": {
    "@elgato-stream-deck/node": "^7.5.2",
    "@julusian/jpeg-turbo": "^3.0.1",
    "canvas": "^3.2.1"
  }
}
