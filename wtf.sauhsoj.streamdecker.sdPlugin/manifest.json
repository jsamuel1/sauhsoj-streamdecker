{
  "$schema": "https://schemas.elgato.com/streamdeck/plugins/manifest.json",
  "UUID": "wtf.sauhsoj.streamdecker",
  "Name": "Kiro CLI Tools",
  "Version": "0.1.5",
  "Author": "sauhsoj",
  "Description": "Stream Deck integration for kiro-cli - launch, navigate tabs, switch agents, send responses",
  "Category": "Kiro",
  "CategoryIcon": "imgs/plugin/category",
  "Icon": "imgs/plugin/icon",
  "CodePath": "bin/plugin.js",
  "SDKVersion": 2,
  "PrivateAPI": true,
  "Software": {
    "MinimumVersion": "6.9"
  },
  "OS": [
    {
      "Platform": "mac",
      "MinimumVersion": "10.15"
    }
  ],
  "Nodejs": {
    "Version": "20",
    "Debug": "enabled"
  },
  "ApplicationsToMonitor": {
    "mac": [
      "com.apple.Terminal",
      "com.googlecode.iterm2",
      "io.warp.warpd",
      "dev.warp.Warp-Stable",
      "com.github.wez.wezterm"
    ]
  },
  "Actions": [
    {
      "UUID": "wtf.sauhsoj.streamdecker.launch-kiro-cli",
      "Name": "Launch kiro-cli",
      "Icon": "imgs/actions/focus-kiro/icon",
      "Tooltip": "Open new iTerm tab with kiro-cli chat",
      "Controllers": [
        "Keypad"
      ],
      "States": [
        {
          "Image": "imgs/actions/focus-kiro/key",
          "TitleAlignment": "bottom"
        }
      ]
    },
    {
      "UUID": "wtf.sauhsoj.streamdecker.launch-kiro-folder",
      "Name": "Launch in Folder",
      "Icon": "imgs/actions/focus-kiro/icon",
      "Tooltip": "Open kiro-cli in a specific folder",
      "PropertyInspectorPath": "ui/launch-folder.html",
      "Controllers": [
        "Keypad"
      ],
      "States": [
        {
          "Image": "imgs/actions/focus-kiro/key",
          "TitleAlignment": "bottom"
        }
      ]
    },
    {
      "UUID": "wtf.sauhsoj.streamdecker.focus-kiro",
      "Name": "Focus Kiro",
      "Icon": "imgs/actions/focus-kiro/icon",
      "Tooltip": "Bring kiro-cli terminal window to foreground",
      "Controllers": [
        "Keypad"
      ],
      "States": [
        {
          "Image": "imgs/actions/focus-kiro/key",
          "TitleAlignment": "bottom"
        }
      ]
    },
    {
      "UUID": "wtf.sauhsoj.streamdecker.cycle-kiro-tabs",
      "Name": "Cycle Kiro Tabs",
      "Icon": "imgs/actions/switch-agent/icon",
      "Tooltip": "Cycle through kiro-cli tabs in iTerm",
      "Controllers": [
        "Keypad"
      ],
      "States": [
        {
          "Image": "imgs/actions/switch-agent/key",
          "TitleAlignment": "bottom"
        }
      ]
    },
    {
      "UUID": "wtf.sauhsoj.streamdecker.next-alert-tab",
      "Name": "Next Alert Tab",
      "Icon": "imgs/actions/send-thinking/icon",
      "Tooltip": "Jump to next kiro-cli tab waiting for input",
      "Controllers": [
        "Keypad"
      ],
      "States": [
        {
          "Image": "imgs/actions/send-thinking/key",
          "TitleAlignment": "bottom"
        }
      ]
    },
    {
      "UUID": "wtf.sauhsoj.streamdecker.switch-agent",
      "Name": "Switch Agent",
      "Icon": "imgs/actions/switch-agent/icon",
      "Tooltip": "Switch kiro-cli to a different agent",
      "PropertyInspectorPath": "ui/switch-agent.html",
      "Controllers": [
        "Keypad"
      ],
      "States": [
        {
          "Image": "imgs/actions/switch-agent/key",
          "TitleAlignment": "bottom"
        }
      ]
    },
    {
      "UUID": "wtf.sauhsoj.streamdecker.switch-agent-personality",
      "Name": "Agent Personality",
      "Icon": "imgs/actions/switch-agent/icon",
      "Tooltip": "Switch to a specific agent from ~/.kiro/agents/",
      "PropertyInspectorPath": "ui/agent-personality.html",
      "Controllers": [
        "Keypad"
      ],
      "States": [
        {
          "Image": "imgs/actions/switch-agent/key",
          "TitleAlignment": "bottom"
        }
      ]
    },
    {
      "UUID": "wtf.sauhsoj.streamdecker.send-yes",
      "Name": "Send Yes",
      "Icon": "imgs/actions/send-yes/icon",
      "Tooltip": "Send 'y' to kiro-cli for confirmation prompts",
      "Controllers": [
        "Keypad"
      ],
      "States": [
        {
          "Image": "imgs/actions/send-yes/key",
          "TitleAlignment": "bottom"
        }
      ]
    },
    {
      "UUID": "wtf.sauhsoj.streamdecker.send-no",
      "Name": "Send No",
      "Icon": "imgs/actions/send-no/icon",
      "Tooltip": "Send 'n' to kiro-cli for confirmation prompts",
      "Controllers": [
        "Keypad"
      ],
      "States": [
        {
          "Image": "imgs/actions/send-no/key",
          "TitleAlignment": "bottom"
        }
      ]
    },
    {
      "UUID": "wtf.sauhsoj.streamdecker.send-thinking",
      "Name": "Send Trust",
      "Icon": "imgs/actions/send-thinking/icon",
      "Tooltip": "Send 't' to kiro-cli to trust/approve tool execution",
      "Controllers": [
        "Keypad"
      ],
      "States": [
        {
          "Image": "imgs/actions/send-thinking/key",
          "TitleAlignment": "bottom"
        }
      ]
    },
    {
      "UUID": "wtf.sauhsoj.streamdecker.kiro-status",
      "Name": "Kiro Status",
      "Icon": "imgs/actions/focus-kiro/icon",
      "Tooltip": "Shows context % and agent of current kiro-cli session",
      "Controllers": [
        "Keypad"
      ],
      "States": [
        {
          "Image": "imgs/actions/focus-kiro/key",
          "TitleAlignment": "middle"
        }
      ]
    },
    {
      "UUID": "wtf.sauhsoj.streamdecker.infobar-calendar",
      "Name": "Calendar / Time",
      "Icon": "imgs/actions/focus-kiro/icon",
      "Tooltip": "Shows next calendar event (within 2h) or current time",
      "Controllers": [
        "Neo"
      ],
      "States": [
        {
          "TitleAlignment": "middle"
        }
      ]
    }
  ],
  "Profiles": [
    {
      "Name": "Koding",
      "DeviceType": 9,
      "Readonly": false,
      "DontAutoSwitchWhenInstalled": true,
      "AutoInstall": true
    },
    {
      "Name": "Koding",
      "DeviceType": 0,
      "Readonly": false,
      "DontAutoSwitchWhenInstalled": true,
      "AutoInstall": true
    }
  ]
}
